<div class="container">
  <div class="row">
    <div class="col-6 mt-5">
      <h1 class="text-white">Post</h1>
      {{> post-info post}}
      </br>
      </br>
      {{> comments post.comments}}
    </div>

  {{#if loggedIn}}
    <div class="col-5 mt-5 ml-5">
      <form id="comment-form">
        <div class="form-group">
          <h4 class="text-white">Leave a comment</h4>
          <label for="comment" class="text-white">Message</label>
          <textarea
            name="comment"
            id="comment-text"
            cols="30"
            rows="5"
            class="form-control bg-white"
            style="background-color: black;"
          ></textarea>
        </div>
        <div class="form-group">
          <button type="submit" id="comment-button" class="btn btn-primary">Add Comment</button>
        </div>
      </form>
    </div>
  {{/if}}

  </div>
</div>

<div class="container mb-4 mt-4">
  <div class="row">
    <div class="col-6">
    </div>
  </div>
</div>
</br>
</br>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}